@import "colors"
@import "hover-bracket"

@import url('https://fonts.googleapis.com/css?family=Josefin+Slab:400,700');

.row
  margin-left 0
  margin-right 0

body
  padding 5px
  font 14px "Lucida Grande", Helvetica, Arial, sans-serif
  .container
    padding-bottom 50px
  background-color BackgroundColor
  color TextMainColor

h1, h2, h3, h4, h5, h6, subtitle, blockquote, em, i
  font-family: 'Josefin Slab', serif;

a
  color LinkColor

.post
  margin-bottom 5em

.wall
  margin-top 20px
  padding 20px 0px 20px 0px
  background-color WallColor
  -moz-box-shadow 0px 2px 2px rgba(0, 0, 0, 0.3)
  -webkit-box-shadow 0px 2px 2px rgba(0, 0, 0, 0.3)
  box-shadow 0px 2px 2px rgba(0, 0, 0, 0.3)
  .content
    padding-left 40px
    padding-right 40px
    h3 
      small
        position relative
        bottom 0.25em
  #title-content
    width auto
    
    text-align center
    h1
      hover-bracket()
      a
        color TitleColor
        text-decoration none
      a:hover
        color TitleColor
    h5
      margin-bottom 1.5em
    i
      color alpha(color-primary-1, 0.5)
    #title-list
      padding-left 0px
      li:not(:last-child)
        padding-right 1em
      li:not(:first-child)
        padding-left 1em
      li
        display inline
        a
          text-decoration none
          font-size 2em
          transition color 0.3s
          color alpha(color-primary-1, 0.5)
        a:hover
          color color-primary-4
  #title-mini-content
    width auto
    h2
      display inline-block
      hover-bracket()
      a
        color TitleColor
        text-decoration none
      a:hover
        color TitleColor
    #title-list
      display inline-block
      position relative
      top 1.5em
      float right
      padding-right 1em
      li:not(:first-child)
        padding-left 1em
      li
        display inline
        a
          margin-left 1em
          text-decoration none
          font-size 1.5em
          transition color 0.3s
          color alpha(color-primary-1, 0.5)
        a:hover
          color color-primary-4
.login-title
  color #555
  font-size 18px
  font-weight 400
  display block

.error-message
  color red
  
.message-section
  margin-top 1em
  margin-bottom -2em

.social
  padding-bottom 0.5em
  display inline-block
  width 100%
  padding-left 1em
  padding-right 1em

.social-block
  display inline-block
  width 100%


footer-background-color = WallColor

.footer
  @media print
    display none !important
  background-color footer-background-color
  padding-top 2em
  .spacer
    padding-left 10px
    padding-right 10px
  .spacer-right
    padding-right 10px
  .spacer-left
    padding-left 10px
  p
    color #bbb
    padding 0px
    margin 0px
  .subject
    color #bbb
    padding 0px
    margin 0px
  a
    color LinkColor
  #loginout
    display inline
    float left
  a#loginout:link 
    text-decoration: none;
  a#loginout:visited
    text-decoration: none;
  a#loginout:hover
    text-decoration: none;
  a#loginout:active
    text-decoration: none;
  #attribution
    float right
    #author
      font-weight bold
      color color-primary-4
    #copyright
      font-weight none
      color color-primary-4
    #licence
      color alpha(color-primary-2, 0.5)

.gitlog
  text-align center
  .title-section
    padding-bottom 2em
  .bar
    @media screen and (max-width: width-sm)
      display none
    height 1px
    background-color darken(footer-background-color, 20%)
    text-align center
    span
      background-color footer-background-color
      position relative
      padding-left 1em
      padding-right 1em
      top -0.5em
      font-style italic
  .history
    padding-top 2em
    @media screen and (max-width: width-sm)
      display none
    .log
      min-height 120px
    .subject
      text-align center
      color alpha(color-primary-3, 50%)
    .body
      text-align left
      color alpha(color-primary-1, 50%)

.side-img
  margin 0
  width 100%

[class*='col-'].no-gutter
  padding-right 0
  padding-left 0