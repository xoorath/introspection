color-primary-0 = #494949
color-primary-1 = #89898A
color-primary-2 = #696969
color-primary-3 = #222222
color-primary-4 = #020203

BackgroundColor = color-primary-1
WallColor = white
LinkColor = color-primary-2
TextMainColor = color-primary-2
TextSpecialColor = color-primary-3

body
  padding 5px
  font 14px "Lucida Grande", Helvetica, Arial, sans-serif
  .container
    padding-bottom 50px
  background-color BackgroundColor
  color TextMainColor

a
  color LinkColor

.form-signin
  padding 15px
  margin 0 auto
  .checkbox
    font-weight normal
  .form-control
    position relative
    font-size 16px
    height auto
    padding 10px
    -webkit-box-sizing border-box
    -moz-box-sizing border-box
    box-sizing border-box
    &:focus
      z-index 2
  input[type="text"]
    margin-bottom -1px
    border-bottom-left-radius 0
    border-bottom-right-radius 0
  input[type="password"]
    margin-bottom 10px
    border-top-left-radius 0
    border-top-right-radius 0
  input[type="password"].nomargin
    margin-bottom 0px
    border-top-left-radius 0
    border-top-right-radius 0

.form-signin .form-signin-heading, .form-signin .checkbox
  margin-bottom 10px

.wall
  margin-top 20px
  padding 20px 0px 20px 0px
  background-color WallColor
  -moz-box-shadow 0px 2px 2px rgba(0, 0, 0, 0.3)
  -webkit-box-shadow 0px 2px 2px rgba(0, 0, 0, 0.3)
  box-shadow 0px 2px 2px rgba(0, 0, 0, 0.3)
  .content
    padding-left 40px
    padding-right 40px
    h3
      padding-top 20px
      clear both
    .title-list
      text-align right
      li
        padding-left 1em
        a
          padding-left 1em
.login-title
  color #555
  font-size 18px
  font-weight 400
  display block

.profile-img
  width 96px
  height 96px
  margin 0 auto 10px
  display block
  -moz-border-radius 50%
  -webkit-border-radius 50%
  border-radius 50%

.new-account
  display block
  margin 20px
  text-align right
a.new-account:link 
  text-decoration: none;
a.new-account:visited
  text-decoration: none;
a.new-account:hover
  text-decoration: none;
a.new-account:active
  text-decoration: none;

.error-message
  color red

.key
  margin-left 1em

.val

.social
  padding-bottom 0.5em
  display inline-block
  width 100%
  padding-left 1em
  padding-right 1em

.social-block
  display inline-block
  width 100%


footer-background-color = WallColor

.logoutbutton
  margin 20px  
.footer
  background-color footer-background-color
  padding-top 2em
  .spacer
    padding-left 10px
    padding-right 10px
  .spacer-right
    padding-right 10px
  .spacer-left
    padding-left 10px
  p
    color #bbb
    padding 0px
    margin 0px
  .subject
    color #bbb
    padding 0px
    margin 0px
  a
    color LinkColor

.gitlog
  text-align center
  .title-section
    padding-bottom 2em
  .bar
    height 1px
    background-color darken(footer-background-color, 20%)
    text-align center
    span
      background-color footer-background-color
      position relative
      padding-left 1em
      padding-right 1em
      top -0.5em
      font-style italic
  .history
    .log
      min-height 100px
    padding-top 2em
    .subject
      text-align left