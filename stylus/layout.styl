WallColor = #f7f7f7
LinkColor = #00B7FF

body
  padding 5px
  font 14px "Lucida Grande", Helvetica, Arial, sans-serif
  .container
    padding-bottom 50px

a
  color LinkColor

.wall
  margin-top 20px
  padding 20px 0px 20px 0px
  background-color WallColor
  -moz-box-shadow 0px 2px 2px rgba(0, 0, 0, 0.3)
  -webkit-box-shadow 0px 2px 2px rgba(0, 0, 0, 0.3)
  box-shadow 0px 2px 2px rgba(0, 0, 0, 0.3)

.login-title
  color #555
  font-size 18px
  font-weight 400
  display block

.profile-img
  width 96px
  height 96px
  margin 0 auto 10px
  display block
  -moz-border-radius 50%
  -webkit-border-radius 50%
  border-radius 50%

.new-account
  display block
  margin-top 10px

.error-message
  color red

.key
  margin-left 1em

.val

.social
  padding-bottom 0.5em
  display inline-block
  width 100%
  padding-left 1em
  padding-right 1em

.social-block
  display inline-block
  width 100%


footer-background-color = #ddd

.footer
  background-color footer-background-color
  padding-top 2em
  .spacer
    padding-left 10px
    padding-right 10px
  .spacer-right
    padding-right 10px
  .spacer-left
    padding-left 10px
  p
    color #bbb
    padding 0px
    margin 0px
  .subject
    color #bbb
    padding 0px
    margin 0px
  a
    color #777

    
.gitlog
  text-align center
  .title-section
    padding-bottom 2em
  .bar
    height 1px
    background-color darken(footer-background-color, 20%)
    text-align center
    span
      background-color footer-background-color
      position relative
      padding-left 1em
      padding-right 1em
      top -0.5em
      font-style italic
  .history
    .log
      min-height 100px
    padding-top 2em
    .subject
      text-align left